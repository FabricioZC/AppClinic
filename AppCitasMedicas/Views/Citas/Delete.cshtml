@model AppCitasMedicas.Models.Citas

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
  
    <dl class="row mt-5">
        <h2 class="mt-4 mb-4 text-white">¿Está seguro que desea eliminar la cita número @Model.ID?</h2>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.ID)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.FechaHora)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.FechaHora)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.IDProcedimiento)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.IDProcedimiento)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.MontoTotal)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.MontoTotal)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

    <form asp-action="Delete" class="form-group d-flex mt-4 justify-content-start">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" style="margin-left: 1rem;" class="btn btn-secondary text-white">Atrás</a>
    </form>
</div>

